<Window x:Class="PhungDucTiepWPF.Views.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Window" Height="450" Width="500"
        WindowStartupLocation="CenterScreen" Background="#f97316">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Greeting}"
                   FontWeight="Bold"
                   FontSize="20"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>

        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="250"
                    Margin="0,10,0,0"
                    Orientation="Vertical">

            <Button Content="Manage Customers"
                    Command="{Binding ManageCustomersCommand}"
                    Margin="0,5,0,0"
                    Height="40"
                    FontSize="14"
                    Background="White"/>

            <Button Content="Manage Products"
                    Command="{Binding ManageProductsCommand}"
                    Margin="0,5,0,0"
                    Height="40"
                    FontSize="14"
                    Background="White"/>

            <Button Content="Orders Processing"
                    Command="{Binding ManageOrdersCommand}"
                    Margin="0,5,0,0"
                    Height="40"
                    FontSize="14"
                    Background="White"/>

            <Button Content="Reports"
                    Command="{Binding ReportsCommand}"
                    Margin="0,5,0,0"
                    Height="40"
                    FontSize="14"
                    Background="White"/>

            <Button Content="Edit Profile"
                    Command="{Binding EditProfileCommand}"
                    Margin="0,5,0,0"
                    Height="40"
                    FontSize="14"
                    Background="White"/>

            <Button Content="Logout"
                    Command="{Binding LogoutCommand}"
                    Margin="0,5,0,0"
                    Height="40"
                    FontSize="14"
                    Background="White"/>
        </StackPanel>
    </Grid>
</Window>